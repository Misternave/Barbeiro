<%- include('partials/header'); -%>
<section class="section-signin h-100 w-100 text-center">
  <div class="container">
    <form class="form-signin">
      <img class="mb-4" src="assets/logotipo.png" alt="" width="72" height="72">
      <h1 class="h3 mb-3 font-weight-normal">Regista-te</h1>
      <div class="form-label-group">
        <label for="inputName" class="sr-only">Nome</label>
        <input type="name" class="form-control" placeholder="Nome" name="name" required autofocus>
        <div class="name error"></div>
      </div>
      <div class="form-label-group">
        <label for="inputEmail" class="sr-only">Email</label>
        <input type="email" class="form-control" placeholder="Email" name="email" required autofocus>
        <div class="email error"></div>
      </div>
      <div class="form-label-group">
        <label for="inputPassword" class="sr-only">Password</label>
        <input type="password" class="form-control" placeholder="Password" name="password" required>
        <div class="password error"></div>
      </div>
      <div class="form-label-group">
        <label for="inputPassword" class="sr-only">Password</label>
        <input type="password" class="form-control" placeholder="Repetir Password" name="passwordrepeat" required>
        <div class="password error"></div>
      </div>
      <div class="checkbox mb-3">
        <span>
          <p>JÃ¡ possui conta? <a href="/authenticate">Login</a>.</p>
        </span>
      </div>
      <button class="btn btn-lg btn-success btn-block" type="submit">Registo</button>
      <p class="mt-5 mb-3 text-muted">&copy; BarbeiroNoob - 2020</p>
    </form>
  </div>
</section>
<script language="javascript" src="register.js"></script>
</body>

</html>