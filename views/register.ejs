<%- include('partials/header'); -%>
<section class="section-signin h-100 w-100 text-center">
  <div class="container">
    <form class="form-signin">
      <img class="mb-4" src="assets/logotipo.png" alt="" width="72" height="72">
      <h1 class="h3 mb-3 font-weight-normal">Regista-te</h1>
      <div class="form-label-group">
        <label for="inputName" class="sr-only">Nome</label>
        <input type="name" class="form-control" placeholder="Nome" name="name" required autofocus>
        <div class="name error"></div>
      </div>
      <div class="form-label-group">
        <label for="inputEmail" class="sr-only">Email</label>
        <input type="email" class="form-control" placeholder="Email" name="email" required autofocus>
        <div class="email error"></div>
      </div>
      <div class="form-label-group">
        <label for="inputPassword" class="sr-only">Password</label>
        <input type="password" class="form-control" placeholder="Password" name="password" required>
        <div class="password error"></div>
      </div>
      <div class="form-label-group">
        <label for="inputPassword" class="sr-only">Password</label>
        <input type="passwordrepeat" class="form-control" placeholder="Repetir Password" name="password" required>
        <div class="password error"></div>
      </div>
      <div class="checkbox mb-3">
        <label>
          <input type="checkbox" value="remember-me"> Lembrar
        </label>
        <span class="psw"><a href="/forgotpassword" onclick="Fxchkbox"> Forgot password?</a></span>
      </div>
      <button class="btn btn-lg btn-success btn-block" type="submit">Login</button>
      <p class="mt-5 mb-3 text-muted">&copy; BarbeiroNoob - 2020</p>
    </form>
  </div>
</section>